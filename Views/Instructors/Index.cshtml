@model ContosoUniversity.Models.SchoolViewModels.InstructorIndexData

@{
    ViewData["Title"] = "Instructors";
}
<style>
   .primarydiv{
       margin-left:50px;
       margin-top:10px;
   }
  #sample1{
      margin-left:100px;
      margin-top:20px;
  }
  #sample2{
       margin-left:100px;
      margin-top:20px;
  }
  #sample3{
       margin-left:100px;
      margin-top:20px;
  }
  #sample3 table{
       border:2px solid rgba(202, 37, 37, 0.78);
      width:85%;
      height:70%;
  }
  #sample2 table{
       border:2px solid rgba(202, 37, 37, 0.78);
      width:85%;
      height:70%;
  }
  #sample1 table{
      border:2px solid rgba(202, 37, 37, 0.78);
    
      width:100%;
      height:70%;
  }
  #sample1 th{
      background-color:rgba(175, 190, 39, 0.77);
  }
  #sample1 th:hover{
       background-color:rgba(175, 190, 39, 0.77);
       color:black;
  }
  #sample1 tr,td,th{
      border:1px solid rgba(217, 168, 33, 0.76);
        padding:20px 5px 20px 20px;
  }
  #sample2 tr,td,th{
       border:1px solid rgba(217, 168, 33, 0.76);
        padding:20px 5px 20px 20px;
  }
  #sample3 tr,td,th{
       border:1px solid rgba(217, 168, 33, 0.76);
        padding:20px 5px 20px 20px;
  }
  .primarydiv a{
      background-color:brown;
      margin-right:20px;
      margin-bottom:10px;
      padding:10px 10px 10px 10px;
      border-radius:7px;
      color:azure;
      width:20%;
  }
  .primarydiv a:hover{
      background-color:darkgreen;
      text-decoration:none;
      color:black;
  }
  #sample1 tbody tr:hover{
      background-color:rgba(0, 0, 0, 0.77);
      color:greenyellow;
  }
  #sample2 tr:hover{
       background-color:rgba(0, 0, 0, 0.77);
      color:greenyellow;
  }
  #sample2 #coltab1{
       background-color:rgba(175, 190, 39, 0.77);
  }
  #sample2 #coltab1:hover{
       background-color:rgba(175, 190, 39, 0.77);
       color:black;
  }
  #sample3 #coltab2{
       background-color:rgba(175, 190, 39, 0.77);
  }
  #sample3 tr:hover{
       background-color:rgba(0, 0, 0, 0.77);
      color:greenyellow;
  }
  #sample3 #coltab2:hover{
      background-color:rgba(175, 190, 39, 0.77);
       color:black;
  }
</style>
<h2>Instructors</h2>
<div class="insind">
    <div class="primarydiv">


        <div id="sample1">
            <p>
                <a asp-action="Create">Create New</a>
            </p>

            <table>
                <thead>
                    <tr>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Hire Date</th>
                        <th>Office</th>
                        <th>Courses</th>
                        <th ></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Instructors)
                    {
                        string selectedRow = "";
                        if (item.ID == (int?)ViewData["InstructorID"])
                        {
                            selectedRow = "success";
                        }
                        <tr class="@selectedRow">
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstMidName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HireDate)
                            </td>
                            <td>
                                @if (item.OfficeAssignment != null)
                                {
                                    @item.OfficeAssignment.Location
                                }
                            </td>
                            <td>
                                @foreach (var course in item.CourseAssignments)
                                {
                                    @course.Course.CourseID @course.Course.Title <br />
                                }
                            </td>
                            <td>
                                <a asp-action="Index" asp-route-id="@item.ID">Select</a>
                                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.ID">Details</a>

                                <a id="d4" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Courses != null)
        {
            <h3>Courses Taught by Selected Instructor</h3>
            <div id="sample2">
                <table>
                    <tr id="coltab1">
                        <th></th>
                        <th>Number</th>
                        <th>Title</th>
                        <th>Department</th>
                    </tr>

                    @foreach (var item in Model.Courses)
                    {
                        string selectedRow = "";
                        if (item.CourseID == (int?)ViewData["CourseID"])
                        {
                            selectedRow = "success";
                        }
                        <tr class="@selectedRow">
                            <td>
                                @Html.ActionLink("Select", "Index", new { courseID = item.CourseID })
                            </td>
                            <td>
                                @item.CourseID
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Department.Name
                            </td>
                        </tr>
                    }

                </table>
            </div>
        }
        @if (Model.Enrollments != null)
        {
            <h3>
                Students Enrolled in Selected Course
            </h3>
            <div id="sample3">
                <table class="table">
                    <tr id="coltab2">
                        <th>Name</th>
                        <th>Grade</th>
                    </tr>
                    @foreach (var item in Model.Enrollments)
                    {
                        <tr>
                            <td>
                                @item.Student.FullName
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Grade)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
    </div>
</div>